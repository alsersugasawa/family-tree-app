# Test Environment Configuration
# This file contains configuration for the test Docker instance

# Database Configuration (Test)
DATABASE_URL=postgresql+asyncpg://postgres:postgres_test@db-test:5432/familytree_test
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_test
POSTGRES_DB=familytree_test

# JWT Configuration (Test - DO NOT use in production)
JWT_SECRET_KEY=test-secret-key-for-testing-only-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
ENVIRONMENT=test
DEBUG=true

# CORS Settings (Test)
CORS_ORIGINS=http://localhost:8081,http://127.0.0.1:8081

# Backup Directory (Test)
BACKUP_DIR=/app/backups

# Security Settings (Test - relaxed for testing)
SECURITY_HEADERS_ENABLED=true
RATE_LIMIT_ENABLED=false

# Optional: SMB Configuration (Test)
SMB_HOST=
SMB_USERNAME=
SMB_PASSWORD=
SMB_SHARE=backups-test
SMB_DOMAIN=
SMB_MOUNT_POINT=/mnt/smb_backups_test

# Optional: NFS Configuration (Test)
NFS_HOST=
NFS_EXPORT=/exports/backups-test
NFS_MOUNT_POINT=/mnt/nfs_backups_test
